<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sabrinalucero.productapp">

    <application
        android:name=".app.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/shopping"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.CategoryActivity"
            android:label="Categories"></activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="Login"></activity>
        <activity
            android:name=".activities.ProductsActivity"
            android:label="Products"></activity>
        <activity
            android:name=".activities.CartActivity"
            android:label="Cart List"></activity>
        <activity
            android:name=".activities.MyPreferenceActivity"
            android:label="Preferences">
        </activity>
        <activity
            android:name=".Splash.SplashActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.AboutMeActivity"/>
    </application>

</manifest>